mixin header(modifier)
  header.header&attributes(attributes)
    .header__area
      a.header__logo-link(href="./"): img.header__logo(src="img/header-logo.png", alt="Logo")
      .header__burger-btn
        .header__burger
          .header__line
          .header__line
          .header__line
        .header__cross
          .header__line
          .header__line
      nav.header__menu
        ul.header__menu-list
          li.header__menu-item: a.header__menu-link(href="#") Главная
          li.header__menu-item: a.header__menu-link(href="#about") О нас
          li.header__menu-item.header__menu-item--drop 
            button.header__menu-link(type="button").header__menu-link--drop
              | Наше пространство
              include ./img/header-arrow.svg
            ul.header__sub-menu-list
              li.header__sub-menu-item
                a.header__menu-link(href="#") Забронировать
              li.header__sub-menu-item
                a.header__menu-link(href="#") Каталог домов
              li.header__sub-menu-item
                a.header__menu-link(href="#") Акции
              li.header__sub-menu-item
                a.header__menu-link(href="#") Правила проживания
          li.header__menu-item: a.header__menu-link(href="#") Как добраться 
          li.header__menu-item: a.header__menu-link(href="#") Вопросы
          li.header__menu-item: a.header__menu-link(href="#") Контакты